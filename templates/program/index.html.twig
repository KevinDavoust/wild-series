{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries :</h1>
    <a href="{{ path('program_new') }}">Add a program</a>
    <div>
        {% for program in programs %}
             <div>
                 <a href="{{ path("program_show", { slug: program.slug }) }}"><h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2></a>
                 <p>{{ program.synopsis }}</p>
             </div>
        {% else %}
        Aucune série trouvée
        {% endfor %}
    </div>
{% endblock %}