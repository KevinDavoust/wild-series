{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}


{% block body %}
    <h1>Toutes les catégories :</h1>

    <a href="{{ path('category_new') }}">Ajouter une nouvelle catégorie</a>

    <div>
        {% for category in categories %}
            <div>
                <h2>{{ loop.index }} / {{ category.name }}</h2>
                <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune catégorie trouvée
        {% endfor %}

    </div>

{% endblock %}
